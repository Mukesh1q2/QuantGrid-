# Test Environment Configuration
NODE_ENV=test

# Database (Test Database)
DATABASE_URL=postgresql://test:test@localhost:5432/optibid_test
DB_HOST=localhost
DB_PORT=5432
DB_NAME=optibid_test
DB_USER=test
DB_PASSWORD=test

# JWT Secrets (Test Values)
JWT_SECRET=test-jwt-secret-key-for-unit-testing-256-bits-long
JWT_REFRESH_SECRET=test-refresh-jwt-secret-key-for-unit-testing
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d

# Encryption (Test Key - 32 bytes)
ENCRYPTION_KEY=test-encryption-key-32-bytes-long-test123

# SendGrid (Test Configuration)
SENDGRID_API_KEY=test-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@optibid.energy
SENDGRID_FROM_NAME=OptiBid Energy Platform

# Twilio (Test Configuration)
TWILIO_ACCOUNT_SID=test-twilio-account-sid
TWILIO_AUTH_TOKEN=test-twilio-auth-token
TWILIO_VERIFY_SERVICE_SID=test-verify-service-sid
TWILIO_PHONE_NUMBER=+1234567890

# Redis (Test Configuration)
REDIS_URL=redis://localhost:6379
SESSION_REDIS_URL=redis://localhost:6379/1
RATE_LIMIT_REDIS_URL=redis://localhost:6379/2
FEATURE_FLAG_REDIS_URL=redis://localhost:6379/3

# Session Configuration
SESSION_SECRET=test-session-secret-key
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Sentry Monitoring (Test)
SENTRY_DSN=https://test-sentry-dsn@test.sentry.io/test
SENTRY_ENVIRONMENT=test
SENTRY_RELEASE=1.0.0-test

# Auth0 (Test Configuration)
AUTH0_SECRET=test-auth0-secret-key
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://test.auth0.com
AUTH0_CLIENT_ID=test-client-id
AUTH0_CLIENT_SECRET=test-client-secret

# Okta (Test Configuration)
OKTA_DOMAIN=test-domain.okta.com
OKTA_CLIENT_ID=test-okta-client-id
OKTA_CLIENT_SECRET=test-okta-client-secret
OKTA_REDIRECT_URI=http://localhost:3000/api/auth/okta/callback

# Google OAuth (Test Configuration)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret

# Azure AD (Test Configuration)
AZURE_AD_CLIENT_ID=test-azure-client-id
AZURE_AD_CLIENT_SECRET=test-azure-client-secret
AZURE_AD_TENANT_ID=test-tenant-id

# Email Templates
EMAIL_TEMPLATE_VERIFICATION_ID=d-template-verification
EMAIL_TEMPLATE_PASSWORD_RESET=d-template-password-reset
EMAIL_TEMPLATE_MFA_SETUP=d-template-mfa-setup
EMAIL_TEMPLATE_WELCOME=d-template-welcome
EMAIL_TEMPLATE_SECURITY_ALERT=d-template-security-alert
EMAIL_TEMPLATE_LOGIN_ALERT=d-template-login-alert

# SMS Templates
SMS_TEMPLATE_VERIFICATION_ID=s-template-verification
SMS_TEMPLATE_MFA_ID=s-template-mfa
SMS_TEMPLATE_SECURITY_ALERT=s-template-security-alert
SMS_TEMPLATE_LOGIN_ALERT=s-template-login-alert

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_MFA=true
ENABLE_SSO=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_SECURITY_ALERTS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# Security Settings
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
SESSION_INACTIVITY_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=1800000

# Development Settings (Test)
DEBUG=optibid:*
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_API_DOCS=true