# Environment Variables Configuration
# Copy this file to .env.local and update with your actual values

# ==============================================
# ANALYTICS & TRACKING
# ==============================================

# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Hotjar User ID
NEXT_PUBLIC_HOTJAR_ID=1234567

# Facebook Pixel ID
NEXT_PUBLIC_FB_PIXEL_ID=123456789

# LinkedIn Insight Tag
NEXT_PUBLIC_LINKEDIN_ID=123456

# ==============================================
# API ENDPOINTS
# ==============================================

# Main API endpoint
NEXT_PUBLIC_API_URL=https://api.optibid-energy.com

# Demo environment
NEXT_PUBLIC_DEMO_URL=https://demo.optibid-energy.com

# WebSocket endpoint for real-time features
NEXT_PUBLIC_WS_URL=wss://ws.optibid-energy.com

# ==============================================
# SOCIAL MEDIA & MARKETING
# ==============================================

# Twitter/X handle
NEXT_PUBLIC_TWITTER_HANDLE=@optibid_energy

# LinkedIn company page
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/optibid-energy

# GitHub organization
NEXT_PUBLIC_GITHUB_URL=https://github.com/optibid-energy

# YouTube channel
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/@optibid-energy

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable demo functionality
NEXT_PUBLIC_ENABLE_DEMO=true

# Enable newsletter signup
NEXT_PUBLIC_ENABLE_NEWSLETTER=true

# Enable chat widget
NEXT_PUBLIC_ENABLE_CHAT=true

# Enable advanced analytics
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true

# Enable video backgrounds
NEXT_PUBLIC_ENABLE_VIDEO_BACKGROUNDS=true

# ==============================================
# CONTENT & LOCALIZATION
# ==============================================

# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,hi,es,fr

# Default currency
NEXT_PUBLIC_DEFAULT_CURRENCY=USD

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# Google Maps API Key (for interactive maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ReCaptcha Site Key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=6LcXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Intercom App ID (for customer support)
NEXT_PUBLIC_INTERCOM_APP_ID=abc12345

# Segment Write Key
NEXT_PUBLIC_SEGMENT_WRITE_KEY=your-segment-write-key

# ==============================================
# PERFORMANCE & OPTIMIZATION
# ==============================================

# CDN URL for static assets
NEXT_PUBLIC_CDN_URL=https://cdn.optibid-energy.com

# Image optimization quality (1-100)
NEXT_PUBLIC_IMAGE_QUALITY=85

# Enable prefetching
NEXT_PUBLIC_ENABLE_PREFETCH=true

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================

# Company information
NEXT_PUBLIC_COMPANY_NAME=OptiBid Energy
NEXT_PUBLIC_COMPANY_EMAIL=contact@optibid-energy.com
NEXT_PUBLIC_COMPANY_PHONE=+91 (0) 11 1234 5678
NEXT_PUBLIC_COMPANY_ADDRESS=New Delhi, India

# Support information
NEXT_PUBLIC_SUPPORT_EMAIL=support@optibid-energy.com
NEXT_PUBLIC_SALES_EMAIL=sales@optibid-energy.com

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Database (Primary)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=optibid
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database Connection Pool
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_POOL_TIMEOUT=30000

# Redis Cache (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Secret (CRITICAL: Use a strong, random string)
JWT_SECRET=your_super_secure_jwt_secret_minimum_256_bits

# Application Base URL
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your_32_character_encryption_key

# ==============================================
# SSO PROVIDERS
# ==============================================

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_CALLBACK_URL=https://your-domain.com/api/auth/callback/auth0

# Okta Configuration
OKTA_DOMAIN=https://dev-123456.okta.com
OKTA_CLIENT_ID=your_okta_client_id
OKTA_CLIENT_SECRET=your_okta_client_secret
OKTA_CALLBACK_URL=https://your-domain.com/api/auth/callback/okta

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/integrations/google/callback

# Azure AD
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# ==============================================
# SUPABASE (Backend Database)
# ==============================================

# Supabase Project
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
