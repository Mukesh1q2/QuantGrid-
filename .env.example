# GDPR Compliance
GDPR_API_ENDPOINT=https://gdpr.your-domain.com
GDPR_API_KEY=your_gdpr_api_key

# ==============================================
# PERFORMANCE & SCALING
# ==============================================

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com

# Image Optimization
NEXT_PUBLIC_IMAGE_QUALITY=85
NEXT_PUBLIC_IMAGE_DOMAIN=images.your-domain.com

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# DEVELOPMENT ONLY
# ==============================================

# Environment
NODE_ENV=development

# Development tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_SKIP_BUILD_OPTIMIZATION=false

# Mock API responses
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_MOCK_APIS=false

# Debug options
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================

# Force production settings (uncomment in production)
# NODE_ENV=production
